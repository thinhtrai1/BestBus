<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center_horizontal"
        android:text="@string/electronic_ticket"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginTop="@dimen/search_tour_margin_top"
        android:layout_weight="1"
        android:background="@drawable/bg_search_tour"
        android:paddingHorizontal="@dimen/margin_15"
        android:paddingTop="@dimen/search_tour_margin_top"
        app:layout_constraintBottom_toTopOf="@id/card"
        app:layout_constraintTop_toBottomOf="@id/title">

        <TextView
            android:id="@+id/tvInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_13"
            android:textStyle="bold" />
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20"
        app:cardCornerRadius="@dimen/margin_15"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_home_header">

            <ImageView
                android:id="@+id/imvQRCode"
                android:layout_width="@dimen/home_logo_size"
                android:layout_height="@dimen/home_logo_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/margin_20" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="@dimen/home_avatar_size"
        android:layout_height="@dimen/home_avatar_size"
        android:layout_marginTop="@dimen/margin_20"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/use_this_qr_code_image"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>