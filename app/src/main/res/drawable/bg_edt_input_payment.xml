        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/color_selecting" />
            <corners android:radius="@dimen/margin_5" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/color_selecting" />
            <corners android:radius="@dimen/margin_5" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/gray_dark" />
            <corners android:radius="@dimen/margin_5" />
        </shape>
    </item>
</selector>
